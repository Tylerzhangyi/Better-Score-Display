{
    "manifest_version": 3,
    "name": "Better Score Display",
    "version": "1.0.1",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://task.yungu.org/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://task.yungu.org/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["pageBridge.js"],
        "matches": ["https://task.yungu.org/*"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  