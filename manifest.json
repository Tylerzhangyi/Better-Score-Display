{
    "manifest_version": 3,
    "name": "Yungu Grade Catcher",
    "version": "1.5",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://task.yungu.org/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://task.yungu.org/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["pageBridge.js"],
        "matches": ["https://task.yungu.org/*"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  